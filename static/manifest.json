{
  "name": "Pixie - Color Picker",
  "description": "Effortlessly pick, copy, and save colors in multiple formats with a single click.",
  "version": "2.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "pixie-small.png",
    "48": "pixie-small.png",
    "128": "pixie-small.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "pixie-small.png",
      "48": "pixie-small.png"
    }
  },
  "background": {
    "service_worker": "scripts/background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content/index.js"]
    }
  ],
  "permissions": ["activeTab", "storage", "clipboardWrite"]
}
