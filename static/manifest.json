{
  "name": "#hexPicker â€” A Simple HEX Color Picker",
  "description": "Effortlessly pick, copy, and save colors in hex format with a single click.",
  "version": "0.3",
  "manifest_version": 3,
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png"
    }
  },
  "background": {
    "service_worker": "scripts/background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content/index.js"]
    }
  ],
  "permissions": ["activeTab", "storage", "clipboardWrite"]
}
